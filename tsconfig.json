{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "sourceMap": true,
        "allowJs": true,
        "esModuleInterop": true,
        // "composite": true,
        "declaration": true,
        "declarationMap": true,
        // NOTE ADDED FOR MIGRATION
        // ref: https://github.com/storybookjs/storybook/issues/9463#issuecomment-599384571
        // "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/*"]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": ["./node_modules/@types", "./types/"]
    },
    "include": ["./src/**/*"]
}
