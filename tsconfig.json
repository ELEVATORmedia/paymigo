{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "baseUrl": "src/",
        "paths": {
            "*": ["node_modules/*", "./*"]
        },
        "typeRoots": ["./node_modules/@types", "src/types"]
    },
    "include": ["./src/**/*"]
}
